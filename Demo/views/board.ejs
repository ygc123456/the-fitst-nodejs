<!DOCTYPE html>
<!-- 123 -->
<html>
<head>
    <meta charset="UTF-8">
    <title>留言板</title>
</head>
<body>
    <h1>留言板</h1>
    <form action="/add" method="POST">
        <input type="text" name="name" placeholder="姓名" required><br>
        <textarea name="message" rows="5" placeholder="留言" required></textarea><br>
        <button type="submit">添加留言</button>
    </form>

    <hr>

    <% messages.forEach((message) => { %>
      <div>
        <h3><%= message.name %></h3>
        <p><%= message.message %></p>
        <a href="/edit/<%= message.id %>">编辑</a>
        <a href="/delete/<%= message.id %>">删除</a>
      </div>
      <hr>
    <% }) %>
</body>
</html>
